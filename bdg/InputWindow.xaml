<Window x:Class="bdg.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bdg"
        mc:Ignorable="d"
        Title="InputWindow" Height="140" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Name="labelInput" Margin="10 10 10 5" FontWeight="Bold">Введите имя:</Label>
            <TextBox Name="TextBoxInput" Margin="10 0 10 2" Padding="5 0 0 5">Поле ввода</TextBox>
            <Button Name="ButtonOK" Margin="10 0 10 10" Click="ButtonOK_Click">ОК</Button>
        </StackPanel>
    </Grid>
</Window>
